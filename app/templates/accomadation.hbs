<html>
{{#if session.isAuthenticated}}
<nav class="navbar navbar-expand-sm bg-dark navbar-dark nav justify-content-end" >
  <ul class="navbar-nav">
    <li class="nav-item active">
           <button {{action "logout"}} class="btn btn-default pull-right">Log out</button>
    </li>
  </ul>
</nav>
<div class="container">
<h1> accomadation entry form </h1>
<form class="form-horizontal">  
  
  <div class="form-group">
      <label for="name" class=" col-md-2 control-label">name</label>
      <div class="col-md-5">
        {{input value=name class="form-control"}}
      </div>
  </div>
  <div class="form-group">
      <label for="country" class=" col-md-2 control-label">country</label>
      <div class="col-md-5">
        {{input value=country class="form-control"}}
      </div>
  </div>
   <div class="form-group">
      <label for="city" class=" col-md-2 control-label">city</label>
      <div class="col-md-5">
        {{input value=city class="form-control"}}
      </div>
  </div>
  <div class="form-group">
      <label for="price" class=" col-md-2 control-label">price</label>
      <div class="col-md-5">
        {{input value=price class="form-control"}}
      </div>
  </div>
  <div class="form-group">
      <label for="spot" class=" col-md-2 control-label">spot</label>
      <div class="col-md-5">
        {{input value=spot class="form-control"}}
      </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
     <button {{action "accomadationAction" }} class="btn btn-sm btn-primary">Submit</button>
   </div>
 </div>
</form>  
</div>
 {{/if}}
</html>